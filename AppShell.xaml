<?xml version="1.0" encoding="utf-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       x:Class="ProyectoP3.AppShell"
       xmlns:views="clr-namespace:ProyectoP3.Views"
       Shell.FlyoutBehavior="Disabled"
       Title="ProyectoP3">

    <TabBar>
        <ShellContent Title="Inicio" ContentTemplate="{DataTemplate views:InicioPage}" Route="InicioPage" />
        <ShellContent Title="Acerca de" ContentTemplate="{DataTemplate views:AcercaDePage}" Route="AcercaDePage" />
        <ShellContent Title="Productos" ContentTemplate="{DataTemplate views:ProductoPage}" Route="ProductoPage" />
        <ShellContent Title="Compras" ContentTemplate="{DataTemplate views:CompraPage}" Route="CompraPage" />
        <ShellContent Title="Usuarios" ContentTemplate="{DataTemplate views:UsuarioPage}" Route="UsuarioPage" />
    </TabBar>
</Shell>
